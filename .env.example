# ============================================
# Cat Food Ingredient Researcher - Environment Variables
# ============================================
# IMPORTANT: Copy this file to .env and fill in your actual values
# NEVER commit .env file to version control!
# ============================================

# Environment Configuration
ENVIRONMENT=development

# ============================================
# Database Configuration (PostgreSQL)
# ============================================
POSTGRES_SERVER=localhost
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your_secure_database_password_here
POSTGRES_DB=cat_food_research
POSTGRES_PORT=5433

# ============================================
# Security Configuration
# ============================================
# Generate with: openssl rand -hex 32
SECRET_KEY=your_secret_key_here_minimum_32_characters_required
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# ============================================
# Vector Database (Qdrant)
# ============================================
QDRANT_HOST=localhost
QDRANT_PORT=6333

# ============================================
# AI Service API Keys
# ============================================
GEMINI_API_KEY=your_gemini_api_key_here
# OPENAI_API_KEY=your_openai_api_key_here

# ============================================
# Application Configuration
# ============================================
PROJECT_NAME="Cat Food Ingredient Researcher"
API_V1_STR=/api/v1
